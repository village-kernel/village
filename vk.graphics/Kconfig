comment "This is using to configure graphics library"

# config GUI

config GUI
	bool "Enable GUI support"
	default n

# config wedget

menu "Wedget"
	depends on GUI 

config GUI_BUTTON
	bool "Enable button support"
	default y

config GUI_CURSOR
	bool "Enable cursor support"
	default y

config GUI_FRAME
	bool "Enable frame support"
	default y

config GUI_LABEL
	bool "Enable label support"
	default y

config GUI_LISTBOX
	bool "Enable list box support"
	default y

config GUI_MENU
	bool "Enable menu support"
	default y

config GUI_MSGBOX
	bool "Enable message box support"
	default y

config GUI_TABBAR
	bool "Enable tab bar support"
	default y

config GUI_TEXTBOX
	bool "Enable text box support"
	default y

config GUI_TOOLBAR
	bool "Enable tool bar support"
	default y

config GUI_WINDOW
	bool "Enable window support"
	default y

endmenu
