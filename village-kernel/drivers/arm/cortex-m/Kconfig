menu "cortex-m Device Driver"

config DMAFIFO
	select DRV_DMA
	bool "Enable dma fifo support"
	default n

config ILI9488
	select DRV_FSMC
	select MANUFACTURER_HAL_DRIVER
	bool "Enable ILI9488 support"
	default n

config SDCARD
	select DRV_SPI
	bool "Enable SD card support"
	default n

config SPIFLASH
	select DRV_SPI
	bool "Enable SPI flash support"
	default n

config UARTSERIAL
	select DRV_USART
	bool "Enable UART serial support"
	default n

config USBSTORAGE
	depends on SDCARD || SPIFLASH
	select MANUFACTURER_HAL_DRIVER
	bool "Enable USB storage support"
	default n

endmenu
