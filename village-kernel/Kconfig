#  This is using to configure kernel

config KERNEL
	bool "Enable building kernel"
	default y

if KERNEL
	# config binutils menu

	menu "binutils"

		comment "This is using to configure binutils"

		config EXECUTOR
				select BINUTILS
				select FILESTREAM
				bool "Enable executor function"
				default n

		config BINEXECUTOR
			depends on EXECUTOR
			select BINLOADER
			bool "Enable *.bin file execute function"
			default n

		config ELFEXECUTOR
			depends on EXECUTOR
			select ELFLOADER
			bool "Enable *.elf file execute function"
			default n

		config HEXEXECUTOR
			depends on EXECUTOR
			select HEXLOADER
			bool "Enable *.hex file execute function"
			default n

		config BINUTILS
			select FILESTREAM
			bool "Enable binutils function"
			default n

		config BINLOADER
			depends on BINUTILS
			select FILESTREAM
			bool "Enable *.bin file loader function"
			default n

		config ELFLOADER
			depends on BINUTILS
			select FILESTREAM
			bool "Enable *.elf file loader function"
			default n

		config HEXLOADER
			depends on BINUTILS
			select FILESTREAM
			bool "Enable *.hex file loader function"
			default n

		config LIBTOOL
			depends on BINUTILS
			bool "Enable library tool function"
			default n

		config MODTOOL
			depends on BINUTILS
			bool "Enable module tool function"
			default n
	endmenu

	# config kernel menu

	menu "kernel"

	config KERNEL_RSVD_HEAP
		int "The size of kernel reserved heap"
		default 1024

	config KERNEL_RSVD_STACK
		int "The size of kernel reserved heap"
		default 1024

	config TASK_STACK
		int "The size of thread task stack"
		default 1024

	config MODULE
		bool "Enable loadable module support"
		select FATFS
		select ELFPARSER
		select ENVIRONMENT

	config ENVIRONMENT
		depends on MODULE
		bool "Build the environment of Loadable module"
		default y

	endmenu

	# config file system

	menu "filesys"

	config FATFS
		bool "Add fat file system in support list"
		default n

	endmenu


	# config protocol stack

	menu "protocol"

	config USB
		bool "Enable usb stack support"
		default n

	config USBD
		depends on USB
		bool "Enable usb device stack support"
		default n

	config USBH
		depends on USB
		bool "Enable usb host stack support"
		default n

	endmenu


	# terminal menu

	menu "terminal"

	config CMD_ABOUT
		bool "Add about cmd to terminal support list"
		default y

	config CMD_CAT
		bool "Add cat system cmd to terminal support list"
		default y

	config CMD_DEBUG
		bool "Add debug system cmd to terminal support list"
		default y

	config CMD_DEVICE
		bool "Add device system cmd to terminal support list"
		default y

	config CMD_ECHO
		bool "Add echo system cmd to terminal support list"
		default y

	config CMD_FILESYS
		bool "Add file system cmd to terminal support list"
		default y

	config CMD_HELP
		bool "Add help cmd to terminal support list"
		default y

	config CMD_KILL
		bool "Add kill cmd to terminal support list"
		default y

	config CMD_MEM
		bool "Add mem cmd to terminal support list"
		default y

	config CMD_MOD
		select MODINSTALLER
		bool "Add insmod and rmmod cmd to terminal support list"
		default y

	config CMD_NULL
		bool "Add null cmd to terminal support list"
		default y

	config CMD_POWER
		bool "Add power cmd to terminal support list"
		default y

	config CMD_PROCESS
		bool "Add process cmd to terminal support list"
		default y

	config CMD_RUN
		select EXECUTOR
		bool "Add run cmd to terminal support list"
		default y

	config CMD_TASKER
		bool "Add tasker cmd to terminal support list"
		default y

	endmenu

	# confg vklibs menu

	menu "vklibs"

		menu "libc"

		comment "This is using to configure libc"

		config VKLIBC
			bool "using vklibc"
			default y

		endmenu

		menu "libc++"

		comment "This is using to configure libc++"

		config VKLIBCPP
			bool "using vklibc++"
			default y

		endmenu

		menu "libm"

		comment "This is using to configure libm"

		config VKLIBM
			bool "using vklibm"
			default y

		endmenu

		menu "libutils"

			menu "fileutils"

			comment "This is using to configure fileutils"

			config FILEUTILS
				bool "Enable file utils support"
				default n

			config DEVSTREAM
				depends on FILEUTILS
				bool "Enable devstream function"
				default n

			config DIRSTREAM
				depends on FILEUTILS
				bool "Enable dirstream function"
				default n

			config FILESTREAM
				depends on FILEUTILS
				bool "Enable filestream function"
				default n

			config FILESYSOPT
				depends on FILEUTILS
				bool "Enable filesysopt function"
				default n

			endmenu

			menu "parser"

			comment "This is using to configure parser"

			config PARSER
				bool "Enable parser support"
				default n

			config INIPARSER
				depends on PARSER
				select FILESTREAM
				bool "Enable ini file parser function"
				default n

			config RCPARSER
				depends on PARSER
				select FILESTREAM
				bool "Enable resource script parser function"
				default n

			config REGEX
				depends on PARSER
				bool "Enable regex function"
				default n

			endmenu

			menu "model"

			comment "This is using to configure model"

			config MODEL
				bool "Enable design mode function"
				default y

			endmenu

			menu "sync"

			comment "This is using to configure sync"

			config SYNC
				bool "Enable synchronizes function"
				default y

			config MUTEX
				depends on SYNC
				bool "Enable mutex lock support"
				default y

			config SPINLOCK
				depends on SYNC
				bool "Enable spin lock support"
				default y

			config SEMAPHORE
				depends on SYNC
				bool "Enable semaphore support"
				default y

			endmenu

		endmenu

	endmenu

endif
