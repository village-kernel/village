comment "Configure Support Function"

# config cpu menu
menu "CPU Support Package"

comment "This is using to configure x86 arch"

config BOOTSECTION
	bool "The arch has boot setion"
	default y

endmenu

# config hal menu
menu "Hardware Abstraction Layer"

config HAL_PCI_CONTROLLER
	bool "Enable pci controller class"
	default y

config HAL_PS2_CONTROLLER
	bool "Enable ps2 controller class"
	default y

endmenu

# Config driver menu
menu "Generic Device Driver"

config ATALBADISK
	tristate "Enable ATA LBA disk support"
	default n

config BOCHSVBE
	select HAL_PCI_CONTROLLER
	tristate "Enable Bochs VBE support"
	default n

config GENERALTIMER
	tristate "Enable general timer support"
	default n

config PS2KEYBOARD
	tristate "Enable ps2 key board input support"
	default n

config PS2MOUSE
	select HAL_PS2_CONTROLLER
	tristate "Enable ps2 mouse input support"
	default n

config SERIALPORT
	tristate "Enable serial port support"
	default y
	
endmenu
